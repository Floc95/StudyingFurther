<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A977EA"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:textAlignment="viewEnd" >

    <!-- Row 1 with single column -->

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|center"
        android:background="#d3d3d3"
        android:gravity="left"
        android:textColor="#000000" >

        <ImageView
            android:id="@+id/avatarP"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/heurPubP"
            android:layout_width="1dp"
            android:layout_gravity="right|center|top"
            android:layout_weight="0"
            android:gravity="left"
            android:text="30/06/2014 18:45"
            android:textSize="10dp" />

    </TableRow>

    <!-- Row 2 with 2 columns -->

    <TableRow
        android:id="@+id/tableRow1"
        android:background="#d3d3d3"
        android:textColor="#000000" >

        <TextView
            android:id="@+id/contenu"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:layout_span="3"
            android:layout_weight="0"
            android:maxHeight="150dp"
            android:text="@string/Description"
            android:textSize="16dp" />

    </TableRow>

    <TableRow android:layout_marginTop="1dp" />

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#d3d3d3"
        android:gravity="center_vertical"
        android:scrollbars="horizontal"
        android:textColor="#000000" >

        <ToggleButton
            android:id="@+id/toggleButton1"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="0"
            android:minHeight="0dp"
            android:textOff="@string/plusun"
            android:textOn="@string/plusun" />

    </TableRow>

    <TableRow android:layout_marginTop="6dp" />


</TableLayout>